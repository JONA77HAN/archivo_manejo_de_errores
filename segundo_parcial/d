import random

# Programa para elegir un inicial de Kanto
def elegir_inicial():
    print("Â¡Bienvenido al mundo PokÃ©mon!")
    print("Puedes elegir uno de los tres iniciales de Kanto:")
    print("1. Bulbasaur ğŸŒ± (Planta/Veneno)")
    print("2. Charmander ğŸ”¥ (Fuego)")
    print("3. Squirtle ğŸŒŠ (Agua)")
    
    while True:
        try:
            eleccion = int(input("Ingresa el nÃºmero de tu elecciÃ³n (1, 2 o 3): "))
            if eleccion == 1:
                print("Â¡Has elegido a Bulbasaur! ğŸŒ±")
                return "Bulbasaur", ["Latigazo", "Polvo Veneno"]
            elif eleccion == 2:
                print("Â¡Has elegido a Charmander! ğŸ”¥")
                return "Charmander", ["Ascuas", "AraÃ±azo"]
            elif eleccion == 3:
                print("Â¡Has elegido a Squirtle! ğŸŒŠ")
                return "Squirtle", ["Pistola Agua", "Placaje"]
            else:
                print("Por favor, ingresa un nÃºmero vÃ¡lido (1, 2 o 3).")
        except ValueError:
            print("Entrada no vÃ¡lida. Por favor, ingresa un nÃºmero.")

# FunciÃ³n para evolucionar al PokÃ©mon inicial
def evolucionar_inicial(pokemon):
    evoluciones = {
        "Bulbasaur": "Ivysaur ğŸŒ±",
        "Ivysaur": "Venusaur ğŸŒ±",
        "Charmander": "Charmeleon ğŸ”¥",
        "Charmeleon": "Charizard ğŸ”¥",
        "Squirtle": "Wartortle ğŸŒŠ",
        "Wartortle": "Blastoise ğŸŒŠ"
    }
    if pokemon in evoluciones:
        evolucionado = evoluciones[pokemon]
        print(f"Â¡Tu {pokemon} ha evolucionado a {evolucionado}!")
        return evolucionado
    else:
        print("Este PokÃ©mon no puede evolucionar.")
        return pokemon

# FunciÃ³n para encontrar un PokÃ©mon aleatorio
def encontrar_pokemon():
    pokemon_encontrados = {
        "Rattata ğŸ­": "Â¿QuÃ© tipo de PokÃ©mon es Rattata? (a) Normal (b) Agua (c) Fuego",
        "Cubone ğŸ¦´": "Â¿QuÃ© lleva Cubone en la cabeza? (a) Un casco (b) Un hueso (c) Una roca",
        "Snorlax ğŸ˜´": "Â¿QuÃ© le gusta hacer a Snorlax? (a) Dormir (b) Correr (c) Luchar",
        "Ditto ğŸŸ£": "Â¿QuÃ© habilidad especial tiene Ditto? (a) Transformarse (b) Curarse (c) Volar",
        "Eevee ğŸ¦Š": "Â¿CuÃ¡ntas evoluciones tiene Eevee en la primera generaciÃ³n? (a) Tres (b) Cuatro (c) Dos",
    }
    encontrado = random.choice(list(pokemon_encontrados.keys()))
    print(f"Â¡Has encontrado un {encontrado}!")
    return encontrado, pokemon_encontrados[encontrado]

# FunciÃ³n para intentar atrapar un PokÃ©mon
def intentar_atrapar(pokemon, pregunta):
    print("Â¿Quieres intentar atraparlo? (sÃ­/no)")
    respuesta = input().strip().lower()
    if respuesta in ["sÃ­", "si"]:
        print(pregunta)
        respuesta_correcta = {
            "Rattata ğŸ­": "a",
            "Cubone ğŸ¦´": "b",
            "Snorlax ğŸ˜´": "a",
            "Ditto ğŸŸ£": "a",
            "Eevee ğŸ¦Š": "a",
            "Moltres ğŸ”¥": "a",
            "Articuno â„ï¸": "a",
            "Zapdos âš¡": "c"
        }
        respuesta_usuario = input("Tu respuesta: ").strip().lower()
        if respuesta_usuario == respuesta_correcta[pokemon]:
            print(f"Â¡Felicidades! Has atrapado a {pokemon}.")
            return pokemon
        else:
            print(f"Â¡Oh no! {pokemon} escapÃ³.")
    else:
        print(f"Dejaste que {pokemon} se fuera.")
    return None

# FunciÃ³n para enfrentar al entrenador Pablo
def enfrentar_entrenador(pokemon_inicial, movimientos, atrapado):
    print("\nTe enfrentas al entrenador Pablo. Â¡PrepÃ¡rate!")
    print("El equipo de Pablo es: Metapod ğŸ› y Raichu âš¡.")

    # Primera batalla contra Metapod
    print("Pablo envÃ­a a Metapod ğŸ›.")
    print(f"Tienes a {pokemon_inicial}. Movimientos disponibles: {movimientos}")
    movimiento = input("Elige un movimiento para atacar: ").strip()
    
    if movimiento == movimientos[0]:  # Movimiento correcto para vencer a Metapod
        print("Â¡Es muy efectivo! Metapod no puede seguir peleando.")
    else:
        print("No fue muy efectivo. Metapod sigue en pie.")
        return pokemon_inicial  # Termina la batalla si no derrotas a Metapod

    # Segunda batalla contra Raichu
    print("Pablo envÃ­a a Raichu âš¡.")
    if atrapado:
        print(f"Usas a {atrapado} para la batalla.")
    else:
        print(f"Sigues con {pokemon_inicial}.")
    
    print("Para ganar, responde la siguiente pregunta:")
    print("Â¿CuÃ¡l es el tipo de Raichu? (a) ElÃ©ctrico (b) Normal (c) Agua")
    respuesta = input("Tu respuesta: ").strip().lower()
    if respuesta == "a":
        print("Â¡Correcto! Has vencido a Raichu y ganado la batalla contra Pablo.")
    else:
        print("Â¡Incorrecto! Raichu te derrotÃ³. Intenta de nuevo mÃ¡s tarde.")
        return pokemon_inicial

    # EvoluciÃ³n obligatoria despuÃ©s de la batalla
    print("\nDespuÃ©s de la batalla, tu PokÃ©mon inicial evoluciona de nuevo.")
    pokemon_inicial = evolucionar_inicial(pokemon_inicial)
    return pokemon_inicial

# FunciÃ³n para enfrentar a Gastly y Mew
def enfrentar_gastly_y_mew(pokemon_inicial, movimientos):
    print("\nMientras exploras, te encuentras con Gastly ğŸ‘» y Mew âœ¨.")
    print("Gastly te ataca. Â¡PrepÃ¡rate para la batalla!")

    # Batalla contra Gastly
    print(f"Tienes a {pokemon_inicial}. Movimientos disponibles: {movimientos}")
    movimiento = input("Elige un movimiento para atacar a Gastly: ").strip()
    if movimiento == movimientos[1]:  # Movimiento diferente al usado contra Metapod
        print("Â¡Es muy efectivo! Gastly ha sido derrotado.")
        print("Has capturado a Gastly ğŸ‘», pero Mew âœ¨ escapa volando.")
    else:
        print("No fue muy efectivo. Gastly te derrota y ambos PokÃ©mon escapan.")

# FunciÃ³n para encontrar aves legendarias
def encontrar_aves_legendarias():
    aves_legendarias = {
        "Moltres ğŸ”¥": "Â¿CuÃ¡l es el tipo principal de Moltres? (a) Agua (b) Fuego (c) Planta",
        "Articuno â„ï¸": "Â¿Cual es el poder de Articuno? (a) Conjelar (b) Intimidar (c) Quemar",
        "Zapdos âš¡": "Â¿En quÃ© tipo de clima aparece Zapdos? (a) Nevadas (b) Lluvias (c) Tormentas"
    }
    encontrado = random.choice(list(aves_legendarias.keys()))
    print(f"Â¡Has encontrado a {encontrado}!")
    return encontrado, aves_legendarias[encontrado]

# Ejecutar el programa
def main():
    inicial, movimientos = elegir_inicial()
    atrapado = None
    
    if inicial:
        while True:
            evolucionar = input("Â¿Quieres evolucionar a tu PokÃ©mon? (sÃ­/no): ").strip().lower()
            if evolucionar in ["sÃ­", "si"]:
                inicial = evolucionar_inicial(inicial)
                break
            elif evolucionar == "no":
                print(f"Â¡Disfruta tu aventura con {inicial}!")
                break
            else:
                print("Por favor, responde con 'sÃ­' o 'no'.")
        
        print("\nMientras exploras, te encuentras con algo interesante...")
        pokemon, pregunta = encontrar_pokemon()
        atrapado = intentar_atrapar(pokemon, pregunta)
    
    # Batalla contra Pablo
    inicial = enfrentar_entrenador(inicial, movimientos, atrapado)

    # Encuentro con Gastly y Mew
    enfrentar_gastly_y_mew(inicial, movimientos)

    # Encuentro con aves legendarias
    print("\nMÃ¡s adelante, te encuentras con un trÃ­o legendario.")
    ave, pregunta_ave = encontrar_aves_legendarias()
    intentar_atrapar(ave, pregunta_ave)

# Iniciar el programa principal
if __name__ == "__main__":
    main()

print("Â¿Te gusto la aventura en kanto?")
print("Â¡No te prucupes ahi muchas mas aventuras mas que en prender!")
